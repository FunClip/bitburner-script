/** @param {NS} ns **/
import * as ServerUtils from "/scripts/utils/ServerUtils.ns"

export async function main(ns) {
	while(true) {
		await ns.sleep(5000) 
		var owneds = ServerUtils.getOwnedServers(ns)
		owneds.forEach(owned => {
			ns.run("/scripts/exec/CopyScripts.ns", 1, owned)
			ns.kill("/scripts/auto/HackRand.ns", owned)
			ns.exec("/scripts/auto/HackRand.ns", owned)
		})
	}

}